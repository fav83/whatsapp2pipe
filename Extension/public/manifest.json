{
  "manifest_version": 3,
  "name": "Chat2Deal: Sync your WhatsApp to Pipedrive",
  "short_name": "Chat2Deal",
  "version": "1.0.277",
  "description": "Find, create, and link Pipedrive contacts directly from WhatsApp Web conversations.",
  "author": "chat2deal.com",
  "permissions": [
    "storage",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "*://web.whatsapp.com/*",
    "https://chat2deal-prod-stage.azurewebsites.net/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://web.whatsapp.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://app.chat2deal.com/*"
      ],
      "js": [
        "dashboard-bridge.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "chunks/*",
        "fonts/*"
      ],
      "matches": [
        "*://web.whatsapp.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
